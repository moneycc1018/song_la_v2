generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ytmusic_info {
  video_id              String                  @id(map: "pk_ytmusic_info") @db.VarChar(50)
  track_name            String                  @db.VarChar(255)
  album_id              String                  @db.VarChar(50)
  album_name            String                  @db.VarChar(255)
  release_year          Int?
  lyrics                String?
  created_at            DateTime                @default(now()) @db.Timestamp(6)
  updated_at            DateTime                @default(now()) @db.Timestamp(6)
  ytmusic_track_artists ytmusic_track_artists[]
  ytmusic_track_tags    ytmusic_track_tags[]
}

model ytmusic_artists {
  artist_id             String                  @id(map: "pk_ytmusic_artists") @db.VarChar(50)
  artist_name           String                  @db.VarChar(255)
  ytmusic_track_artists ytmusic_track_artists[]
}

model ytmusic_track_artists {
  video_id        String          @db.VarChar(50)
  artist_id       String          @db.VarChar(50)
  ytmusic_info    ytmusic_info    @relation(fields: [video_id], references: [video_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_ytmusic_track_artists_video_id")
  ytmusic_artists ytmusic_artists @relation(fields: [artist_id], references: [artist_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_ytmusic_track_artists_artist_id")

  @@id([video_id, artist_id], map: "pk_ytmusic_track_artists")
}

model ytmusic_tags {
  id                 Int                  @id @default(autoincrement())
  tag_name           String               @unique @db.VarChar(50)
  deprecated         Boolean              @default(false)
  created_at         DateTime             @default(now()) @db.Timestamp(6)
  updated_at         DateTime             @default(now()) @db.Timestamp(6)
  ytmusic_track_tags ytmusic_track_tags[]
}

model ytmusic_track_tags {
  video_id     String       @db.VarChar(50)
  tag_id       Int
  ytmusic_info ytmusic_info @relation(fields: [video_id], references: [video_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_ytmusic_track_tags_video_id")
  ytmusic_tags ytmusic_tags @relation(fields: [tag_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_ytmusic_track_tags_tag_id")

  @@id([video_id, tag_id], map: "pk_ytmusic_track_tags")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}