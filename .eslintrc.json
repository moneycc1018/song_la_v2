{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "better-tailwindcss"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:better-tailwindcss/recommended",
    "prettier"
  ],
  "ignorePatterns": ["node_modules/", ".next/", "out/", "*.mjs"],
  "rules": {
    // typescript-eslint 規則調整
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // 允許未使用但以 _ 開頭的函式參數不警告
    "@typescript-eslint/no-explicit-any": "warn", // 對 any 型別警告改為警告等級

    // better-tailwindcss 規則調整
    "better-tailwindcss/enforce-consistent-line-wrapping": "off",
    "better-tailwindcss/enforce-consistent-class-order": "off", // 關閉 class 名稱排序檢查

    // react hooks 規則調整
    "react-hooks/exhaustive-deps": "warn" // 對 React Hooks effect 依賴警告改為警告等級
  },
  "settings": {
    "better-tailwindcss": {
      "entryPoint": "styles/globals.css"
    }
  }
}
